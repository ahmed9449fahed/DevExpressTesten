                            CenterPoint="53.542461,9.889865"
                            ZoomLevel="14"
                            EnableZooming="True"
               
                AutomationProperties.AccessKey="Ag7eygjyIc9cUjB_JbNGSRx5GbPhFLjkhIXyXXwrthp-hsB4TdZtQ2bFQWoZIKBG"              
                >
                <dxm:ImageTilesLayer>
                    <dxm:BingMapDataProvider/>
                </dxm:ImageTilesLayer>
            </dxm:MapControl>-->
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
